<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_fighter_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:padding="1dp"
    android:layout_marginBottom="9dp">

    <LinearLayout
        android:id="@+id/linear_layout_main_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#dddddd"
        android:padding="1dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/fighter_thumbnail"
            tools:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_first_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="First name"/>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nickname"/>

            <TextView
                android:id="@+id/tv_last_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Last Name"/>

        </LinearLayout>

        <ronandoyle.ie.ufcrankings.Seperator
            android:id="@+id/view_seperator"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="#dddddd"
            android:layout_below="@+id/linear_layout_main_details"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:paddingRight="25dp"
            android:paddingEnd="25dp"
            app:size="2dp"/>

        <TextView
            android:id="@+id/tv_weightclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:text="Weight Class"/>

    </LinearLayout>
</RelativeLayout>